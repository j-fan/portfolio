$nav-bar-height = 80px
$nav-bar-height-thin = 80px
$content-width = 800px
$landing-text-color = #FFF
$banner-anim-duration = 0.1s
body
	margin: 0
	font-family: 'Lato', sans-serif
	font-size: 16px
	box-sizing: border-box

	#banner
		color: $landing-text-color
		-webkit-user-select: none
		-moz-user-select: none
		ms-user-select: none
		width: 100%
		height:"calc(100vh - %s)" % $nav-bar-height
		display: flex
		justify-content: center
		align-items: center
		flex-direction: column
		&.banner-mode
			#banner-bg
				height: 100vh
		&.active
			#banner-title, #banner-subtitle, #banner-subtitle2
				transform: translateY(0px)
				opacity: 1
		#banner-title, #banner-subtitle, #banner-subtitle2
			transition: transform 0.4s ease-in, opacity 0.4s ease-in
			transform: translateY(-10px)
			opacity: 0
		#banner-bg
			position: absolute
			top: 0
			left: 0
			background: #333
			width:100%
			height:"calc(100vh - %s)" % ($nav-bar-height - $nav-bar-height-thin)
			z-index: -1
			background-image url("../img/banner-temp.jpg")
			//filter: brightness(40%) //lol dont use this for large img on mobile
			background-size: cover
			background-repeat: no-repeat
			
		#banner-title
			transition-delay: 0s
			font-family: 'Oswald', sans-serif
			font-size: 80px
			text-transform: uppercase
			font-weight: 700
		#banner-subtitle
			transition-delay : $banner-anim-duration
			font-size: 24px
		#banner-subtitle2
			transition-delay : $banner-anim-duration * 2
			margin-top: 10px


	#nav-bar
		-webkit-user-select: none
		-moz-user-select: none
		ms-user-select: none
		display: flex
		min-height: $nav-bar-height-thin
		margin: 0 auto
		justify-content: center
		align-items: center
		position: sticky
		width: 100%
		top: 0
		left: 0
		z-index: 99
		color: black
		opacity: 0
		transform: translateY(-10px)
		&.banner-mode
			color: $landing-text-color
			min-height: $nav-bar-height
			transition: color 0.2s ease
			.background
				height: 0px
			.nav-item
				.border
					background-color: $landing-text-color
		&.active
			opacity: 1
			transform: translateY(0px)
			transition:transform 0.4s ease-in, opacity 0.4s ease-in
			transition-delay: $banner-anim-duration * 3
		.background
			bottom: 0
			left: 0
			transition: height 0.2s ease
			position:absolute
			width: 100%
			height: $nav-bar-height-thin
			background: white
			box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.1)
			z-index: -1
		.nav-item
			text-transform: uppercase
			font-family: 'Oswald', sans-serif
			height: 100%
			margin: 0px 10px
			text-align: center
			.border
				margin-top: 4px
				height: 3px
				background: black
				width: 0
				transition: width 0.3s ease
				background-color: black
			&:hover, &.active
				cursor: pointer
				.border
					width: 100%
		.divider
			margin-top: -6px
			&::after
				content: "//"
	#content
		margin: 0 auto
		max-width: $content-width
		min-height: "calc(100vh - %s)" % $nav-bar-height-thin
		&.banner-mode
			display: none
		.page
			height: 0
			opacity: 0
			overflow:hidden
			padding: 0
			&.active
				padding-top: 30px
				padding-bottom: 30px
				height: auto
				opacity: 1
			.item
				cursor:pointer
				height: 0
				padding: 0
				opacity: 0
				margin-top: 20px
				transition: none
				&.active
					transition: height 0.3s ease-in,
											opacity 0.3s ease-in,
											margin-top 0.3s ease-in
					opacity: 1
					margin-top: 0
					.overlay
						-webkit-user-select: none
						-moz-user-select: none
						ms-user-select: none
						position: absolute
						display: flex
						flex-direction: column
						align-items: center
						justify-content: center
						color:white
						background-color: rgba(0,0,0,0.7)
						opacity: 0
						transition: opacity 0.3s ease
						&:hover, &:active
							opacity: 1
							.overlay-inner
								.tools,.title,.description
									margin-top: 0px
									opacity: 1
								.bottom-line, .top-line
									margin: 10px 0px
									
						.overlay-inner
							transform-style: preserve-3d
							padding: 50px
							.tools,.title,.description
								margin-top: 20px
								transition: margin-top 0.2s ease-in, opacity 0.2s ease-in
								opacity: 0
							.top-line,.bottom-line
								margin: 20px 0px
								transform : translateZ(20px)
								height: 2px
								background-color: white
							.tools
								transform : translateZ(30px)
								text-transform: uppercase
								font-weight: 600
								font-size: 16px
							.title
								transform : translateZ(40px)
								font-family: 'Oswald', sans-serif
								font-size: 40px
								text-transform: uppercase
							.description
								transform : translateZ(30px)
								font-size: 14px
							.date
								transform : translateZ(20px)
							.top-line
								width: 100%
							.bottom-line
								width: 100%
							.tl, .tr, .br, .bl
								position: absolute
								width: 10px
								height: 10px
							.tl, .tr
								border-top: 2px solid white
								top: 0
							.bl, .br
								border-bottom: 2px solid white
								bottom: 0
							.tl, .bl
								border-left: 2px solid white
								left: 0
							.tr, .br
								border-right: 2px solid white
								right: 0
					img
						width: 100%


@media only screen and (max-width: 400px)
	body
		font-size: 4vw
		#banner
			#banner-centre
				#banner-title
					font-size: 22vw
				#banner-subtitle
					font-size: 6vw
		#nav-bar
			font-size: 4vw
			.nav-item
				margin: 0 4px
		#content
			.page
				&.active
					padding: 0px 10px
				.item
					&.active
						.overlay
							.overlay-inner
								padding: 10px 
								.tools
									font-size:4vw
								.title
									font-size:8vw
								.description
									font-size:3.5vw
