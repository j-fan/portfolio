$nav-bar-height = 60px

body
	margin: 0
	font-family: 'Lato', sans-serif
	font-size: 16px
	box-sizing: border-box

	#banner
		-webkit-user-select: none
		-moz-user-select: none
		ms-user-select: none
		width: 100%
		height: calc(100vh - 60px)
		#banner-centre
			background: #DDD
			display: flex
			justify-content: center
			align-items: center
			height: 100vh
			flex-direction: column
			#banner-title
				font-family: 'Oswald', sans-serif
				font-size: 80px
				text-transform: uppercase
				font-weight: 700
			#banner-subtitle
				font-size: 24px
			#banner-subtitle2
				margin-top: 10px


	#nav-bar
		//background-color: white
		-webkit-user-select: none
		-moz-user-select: none
		ms-user-select: none
		display: flex
		min-height: $nav-bar-height
		margin: 0 auto
		justify-content: center
		align-items: center
		position: sticky
		width: 100%
		top: 0
		left: 0
		z-index: 99
		//transition: background-color 0.3s ease
		&.banner-mode
			background-color: transparent
		.nav-item
			height: 100%
			margin: 0px 10px
			text-align: center
			.border
				margin-top: 4px
				height: 3px
				background: black
				width: 0
				transition: width 0.3s ease
			&:hover, &.active
				cursor: pointer
				.border
					width: 100%
	#content
		margin: 0 auto
		max-width: 1000px
		height: "calc(100vh - %s)" % $nav-bar-height
		overflow:hidden
		&.banner-mode
			display: none
		#content-inner
			width: 100%
			height:100%
			overflow-y: auto
			//padding-right: 16px
			.page
				height: 0
				opacity: 0
				overflow:hidden
				padding: 0
				&.active
					padding: 40px
					height: auto
					opacity: 1
				.item
					height: 0
					padding: 0
					opacity: 0
					margin-top: 20px
					transition: none
					&.active
						transition: height 0.3s ease-in,
												opacity 0.3s ease-in,
												margin-top 0.3s ease-in
						margin-top: 0
						padding: 10px
						opacity: 1


@media only screen and (max-width: 400px)
	body
		font-size: 14px
		#content
			.page
				&.active
					padding: 0px 30px
				.item
					&.active
						padding:10px 0
