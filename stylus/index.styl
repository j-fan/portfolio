$nav-bar-height = 80px
$nav-bar-height-thin = 80px
$content-width = 900px
$banner-mode-text-color = #FFF
$main-mode-text-color = #FFF
$banner-anim-duration = 0.1s
$main-page-color = #050505
$noise = url('/img/noise.png')

body
	margin: 0
	font-family: 'Lato', sans-serif
	font-size: 16px
	box-sizing: border-box
	background-color: $main-page-color
	background-image: $noise
	&.no-scroll
		overflow: hidden
	a
		color: white
		&:hover
			color: white
			opacity: 0.8

	#banner
		color: $banner-mode-text-color
		-webkit-user-select: none
		-moz-user-select: none
		ms-user-select: none
		width: 100%
		height:"calc(100vh - %s)" % $nav-bar-height
		display: flex
		justify-content: center
		align-items: center
		flex-direction: column
		&.banner-mode
			#banner-bg
				height: 100vh
		&.active
			#banner-title, #banner-subtitle, #banner-subtitle2
				transform: translateY(0px)
				opacity: 1
		#banner-title, #banner-subtitle, #banner-subtitle2
			transition: transform 0.2s ease-in, opacity 0.2s ease-in
			transform: translateY(-10px)
			opacity: 0
		#banner-bg
			position: absolute
			top: 0
			left: 0
			background: #333
			width:100%
			height:"calc(100vh - %s)" % ($nav-bar-height - $nav-bar-height-thin)
			z-index: -1
			background-image url("../img/banner-temp.jpg")
			background-size: cover
			background-repeat: no-repeat
			opacity: 1
			transition: opacity 1s ease 1s
			&.inactive
				opacity: 0
		#banner-title
			transition-delay: 0s
			font-family: 'Oswald', sans-serif
			font-size: 80px
			text-transform: uppercase
			font-weight: 700
		#banner-subtitle
			transition-delay : $banner-anim-duration
			font-size: 24px
		#banner-subtitle2
			transition-delay : $banner-anim-duration * 2
			margin-top: 10px


	#nav-bar
		-webkit-user-select: none
		-moz-user-select: none
		ms-user-select: none
		display: flex
		min-height: $nav-bar-height-thin
		margin: 0 auto
		justify-content: center
		align-items: center
		position: sticky
		width: 100%
		top: 0
		left: 0
		z-index: 99
		color: $main-mode-text-color
		opacity: 0
		transform: translateY(-10px)
		&.banner-mode
			color: $banner-mode-text-color
			min-height: $nav-bar-height
			transition: color 0.2s ease
			.background
				height: 0px
			.nav-item
				.border
					background-color: $banner-mode-text-color
		&.active
			opacity: 1
			transform: translateY(0px)
			transition:transform 0.4s ease-in, opacity 0.4s ease-in
			transition-delay: $banner-anim-duration * 3
		.background
			bottom: 0
			left: 0
			transition: height 0.2s ease
			position:absolute
			width: 100%
			height: $nav-bar-height-thin
			background: $main-page-color
			background-image: $noise
			box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.1)
			z-index: -1
		.nav-item
			text-transform: uppercase
			font-family: 'Oswald', sans-serif
			height: 100%
			margin: 0px 10px
			text-align: center
			.border
				margin-top: 4px
				height: 3px
				width: 0
				transition: width 0.3s ease
				background-color: $main-mode-text-color
			&:hover, &.active
				cursor: pointer
				.border
					width: 100%
		.divider
			margin-top: -6px
			&::after
				content: "//"
	#content
		margin: 0 auto
		max-width: $content-width
		min-height: "calc(100vh - %s)" % $nav-bar-height-thin
		.line
			height: 2px
			background-color: $main-mode-text-color
			width: 100%
			margin: 20px 0

		&.banner-mode
			display: none
		.page
			height: 0
			opacity: 0
			overflow:hidden
			padding: 0
			&.active
				padding-top: 30px
				padding-bottom: 30px
				height: auto
				opacity: 1
			&.model-mode
				height: 0
			&.about
				max-width: 600px
				margin: 0 auto
				.item
					padding: 0 10px
					transform: translateY(10px)
					&.active
						transition: height 0.3s ease-in,
												opacity 0.3s ease-in,
												transform 0.3s ease-in
						transform: translateY(0px)
				.title
					text-align: center
					font-size: 40px
					margin: 50px 0
				.subtitle
					font-size: 20px
				h4
					text-transform: uppercase
					font-family: 'Oswald', sans-serif

			.item
				cursor:pointer
				height: 0
				padding: 0
				opacity: 0
				margin-top: 10px
				transition: none
				color: $main-mode-text-color
				margin-bottom: 5px
				&.active
					transition: height 0.3s ease-in,
											opacity 0.3s ease-in,
											margin-top 0.3s ease-in
					opacity: 1
					margin-top: 0
				.project-page
					color: $main-mode-text-color
					cursor: default
					position: fixed
					top: 0
					left: 0
					background-color: $main-page-color
					background-image: $noise
					opacity: 0
					height: 100%
					width:100%
					z-index: 100
					transition: opacity 0.3s ease, transform 0.3s ease
					pointer-events: none
					transform:scale(0.5)
					&.active
						transform: scale(1)
						opacity: 1
						pointer-events: auto
					.tl, .tr, .br, .bl
						position: fixed
						border-color: $main-mode-text-color
						width: 40px
						height: 40px
						margin: 20px
						border-width: 2px
					.close
						cursor: pointer
						position: fixed
						width: 60px
						height: 60px
						left: calc(50% - 30px)
						z-index: 2
						&:before, &:after
							z-index: 1
							position: absolute
							width: 2px
							left: 50%
							top: 50%
							background-color: $main-mode-text-color
							content: " "
							height: 50%
						&:before
							transform: rotate(45deg)
						&:after
							transform: rotate(-45deg)
						&:hover
							&:before, &:after
								opacity: 0.7
						&:active
							&:before, &:after
								opacity: 0.9
					.inner
						overflow:hidden
						position: relative
						margin: 40px 80px
						height: calc(100% - 80px)
						/* y no crossbrowser scrollbar styling*/
						.inner-inner
							overflow-y: auto
							padding-right: 20px
							width: 100%
							height:100%
							.project-content
								max-width: $content-width
								margin: 0 auto
								.header
									display: flex
									align-items: stretch
									min-height: 300px
									margin-top: 50px
									.line
										width: 0
										transition: width 0.3s ease-in 0.5s
									.left
										width:70%
										margin-right: 80px
										.title
											font-size: 60px
											line-height: 60px
											font-family: 'Oswald', sans-serif
											text-transform: uppercase
										.tool
											margin: 10px 0px
											font-size: 20px

									.description
										width: 100%
										p
											margin: 0
											margin-top: 5px
								.main
									transition-delay: 0.6s
									.video
										padding-bottom: 56.25%
										height: 0
										width:100%
										position: relative
								.header,.main
									opacity: 0
									transform: translateY(20px)
									transition: opacity 0.3s ease, transform 0.3s ease
									&.active
										opacity: 1
										transform: translateY(0px)
								.header
									transition-delay: 0.2s
									&.active
										.line
											width: 100%
								.main
									transition-delay: 0.7s



				.overlay
					-webkit-user-select: none
					-moz-user-select: none
					ms-user-select: none
					position: absolute
					display: flex
					flex-direction: column
					align-items: center
					justify-content: center
					color:white
					background-color: rgba(0,0,0,0.6)
					opacity: 0
					transition: opacity 0.3s ease
					&:hover, &:active
						opacity: 1
						.overlay-inner
							.tools,.title,.description
								margin-top: 0px
								opacity: 1
							.bottom-line, .top-line
								margin: 10px 0px
					.overlay-inner
						transform-style: preserve-3d
						padding: 50px
						.tools,.title,.description
							margin-top: 20px
							transition: margin-top 0.2s ease-in, opacity 0.2s ease-in
							opacity: 0
						.top-line,.bottom-line
							margin: 20px 0px
							transform : translateZ(20px)
							height: 2px
							background-color: white
						.tools
							transform : translateZ(30px)
							text-transform: uppercase
							font-weight: 600
							font-size: 16px
						.title
							transform : translateZ(50px)
							font-family: 'Oswald', sans-serif
							font-size: 40px
							text-transform: uppercase
						.description
							transform : translateZ(30px)
							font-size: 14px
						.date
							transform : translateZ(20px)
						.top-line
							width: 100%
						.bottom-line
							width: 100%
				.tl, .tr, .br, .bl
					position: absolute
					width: 10px
					height: 10px
				.tl, .tr
					border-top: 2px solid white
					top: 0
				.bl, .br
					border-bottom: 2px solid white
					bottom: 0
				.tl, .bl
					border-left: 2px solid white
					left: 0
				.tr, .br
					border-right: 2px solid white
					right: 0
				img
					width: 100%


@media only screen and (max-width: 400px)
	body
		font-size: 4vw
		#banner
			#banner-centre
				#banner-title
					font-size: 22vw
				#banner-subtitle
					font-size: 6vw
		#nav-bar
			font-size: 4vw
			.nav-item
				margin: 0 4px
		#content
			.page
				&.active
					padding: 0px 10px
				.item
					.overlay
						.overlay-inner
							padding: 10px
							.tools
								font-size:4vw
							.title
								font-size:8vw
							.description
								font-size:3.5vw
					.project-page
						&.active
							.tl, .tr, .br, .bl
								height: 20px
								width: 20px
								margin: 10px
							.inner
								margin: 20px
								height: calc(100% - 40px)
								.inner-inner
									.project-content
										.header
											display: block
											margin-bottom: 40px
											.left
												width: 100%
												margin-right: 0px
												.title
													font-size: 10vh
													line-height: 1
												.tool
													margin: 0
										.description
											margin-top: 10px
